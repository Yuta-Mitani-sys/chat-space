.chat-box
  .side-hedder
    .box
      .box__name 
        = current_user.name
      %ul.box__menu
        %li.box__menu__menu-1
          = link_to new_group_path do
            = icon('far', 'edit')
        %li.box__menu__menu-2
          = link_to edit_user_path(current_user) do
            = icon('fa', 'cog')


  .group-list
    .list
      - current_user.groups.each do |group|
        %ul.group
          = link_to group_messages_path(group) do
            %li.group__name  
              = group.name
            %li.group__message
              = group.message.content