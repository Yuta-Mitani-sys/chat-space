.chat-main
  .group-info
    .group-info__left-box
      .group-info__left-box__current-group
        = @group.name
      %ul.group-info__left-box__member-list 
        Member :
        - @group.users.each do |user|
          %li.group-info__left-box__member-list__member
          = user.name
    = link_to edit_group_path(@group) do
      .group-info__edit-btn Edit


  .message-list
    = render @messages


  .message-info
    = form_for [@group, @message] do |f|
      .new-message
        .new-message__input-box
          = f.text_field :content, class: 'new-message__input-box__text', placeholder: 'type a message'
          = f.label :image, class: 'new-message__input-box__image' do
            = icon('fa', 'image')
            = f.file_field :image, class: 'new-message__input-box__image__file'
        = f.submit 'Send', class: 'new-message__submit-btn'
